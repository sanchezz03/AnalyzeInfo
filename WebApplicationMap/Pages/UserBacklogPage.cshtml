@page
@model WebApplicationMap.Pages.UserBacklogPageModel
@{
    ViewData["Title"] = "User Backlog Info Page";
}
<form method="post">
    <style>
        * {
            font-family: Arial, sans-serif;
        }

        h1 {
            margin-top: 1px;
        }

        h2 {
            font-size: 20px;
            margin-top: 1px;
        }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            text-align: left;
            border: solid 0.1px grey;
            padding: 10px;
        }

        th {
            background-color: lightgrey;
            color: black;
            font-size: 14px;
        }

        td {
            font-size: 12px;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        button {
            width: 15%;
            font-size: 16px;
            padding: 10px;
            border: none;
            border-radius: 5px;
            margin-right: 10px;
            cursor: pointer;
            background-color: #337ab7;
            color: white;
        }

            button:hover {
                background-color: #555;
                color: white;
            }

        input[type=text] {
            width: 30%;
            padding: 10px;
            margin-right: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
            font-size: 14px;
        }

            input[type=text]:focus {
                border: 1px solid #555;
            }

        select {
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
            font-size: 14px;
            width: 20%;
        }

        .pagination {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

            .pagination a {
                display: inline-block;
                padding: 6px 12px;
                margin-right: 5px;
                border-radius: 3px;
                background-color: #fff;
                border: 1px solid #ddd;
                color: #333;
                text-decoration: none;
            }

                .pagination a:hover {
                    background-color: #f5f5f5;
                }

            .pagination .current {
                background-color: #337ab7;
                color: #fff;
                border-color: #337ab7;
            }

        .search-buttons {
            float: right;
        }
    </style>


    <table>
        <thead>
            <tr>
                <th>Backlog Id</th>
                <th>UserId</th>
                <th>UserName</th>
                <th>Assign_SA_Name</th>
                <th>Permission_Level</th>
                <th>ActiveStatus</th>
                <th>Date_And_Time</th>
                <th>Action_Done</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.UserBacklogInfosList == null)
            {

            }
            else
            {
                @foreach (var item in Model.UserBacklogInfosList)
                {
                    if (item != null)
                    {
                        <tr>
                            <td>@item.BacklogId</td>
                            <td>@item.UserId</td>
                            <td>@item.UserName</td>
                            <td>@item.AssignSaName</td>
                            <td>@item.PermissionLevel</td>
                            <td>@item.ActiveStatus</td>
                            <td>@item.DateAndTime</td>
                            <td>@item.ActionDone</td>                         
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
    <br />
    @{
        var prevDisabled = !Model.UserBacklogInfosList.HasPreviousPage ? "disabled" : "";
        var nextDisabled = !Model.UserBacklogInfosList.HasNextPage ? "disabled" : "";
    }

    <a asp-page="UserBacklogPage"
       asp-route-pageIndex="@(Model.UserBacklogInfosList.PageIndex -1)"
       class="btn btn-default @prevDisabled">
        Previous
    </a>
    <a asp-page="UserBacklogPage"
       asp-route-pageIndex="@(Model.UserBacklogInfosList.PageIndex +1)"
       class="btn btn-default @nextDisabled">
        Next
    </a>
</form>