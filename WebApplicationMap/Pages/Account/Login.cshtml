@page
@model WebApplicationMap.Pages.Account.LoginModel
@{
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
</head>
<body>

    <style>
        .login-btn {
            float: left;
            margin-top: 10px;
            margin-right: 10px;
            border: 1px solid black;
            border-radius: 5px;
            padding: 5px 10px;
            display: inline-block;
        }
    </style>

    <div class="container border" style="padding:20px">
        <h3>Login</h3>
        @if (!string.IsNullOrEmpty(ViewBag.message))
        {
            <p>@ViewBag.message</p>
        }
        <form method="post">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="user_Permition.UserName"></label>
                </div>
                <div class="col-5">
                    <input type="text" asp-for="user_Permition.UserName" class="form-control" />
                    <span class="text-danger" asp-validation-for="user_Permition.UserName"></span>
                </div>            
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="user_Permition.Password"></label>
                </div>
                <div class="col-5">
                    <input type="password" asp-for="user_Permition.Password" class="form-control" />
                </div>
                <span class="text-danger" asp-validation-for="user_Permition.Password"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <button type="submit" class="btn btn-primary login-btn">Login</button>
                </div>
                <div class="col-2">
                    <a class="btn btn-primary login-btn" asp-page="Registration">Registration</a>
                </div>
            </div>
        </form>
    </div>
</body>
</html>
